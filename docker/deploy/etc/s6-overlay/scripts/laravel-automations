#!/command/with-contenv bash

# Exit on error
set -e

echo ""
echo "ğŸ‡  Configuring Speedtest Tracker..."
echo ""

if [ ${DB_CONNECTION:="sqlite"} == "sqlite" ]; then
    # Check for database
    if [ ! -f /config/database.sqlite ]; then
        echo "ğŸ™„  SQLite database not found, creating..."
        s6-setuidgid webuser touch /config/database.sqlite
        echo "âœ…  SQLite database created."
    else
        echo "âœ…  Database already exists."
    fi
    echo ""

    # create symlinks
    echo "ğŸ”—  Creating database symlink..."
    symlinks=( \
    /var/www/html/database/database.sqlite \
    )

    for i in "${symlinks[@]}"
    do
        if [[ -e "$i" && ! -L "$i" ]]; then
            rm -rf "$i"
        fi
        if [[ ! -L "$i" ]]; then
            ln -s /config/"$(basename "$i")" "$i"
        fi
    done

    echo "âœ…  Database symlink created."
    echo ""
fi

# Check for env file
if [ ! -f /config/.env ]; then
    echo "ğŸ™„  Environment file not found, creating..."
    s6-setuidgid webuser cp $WEBUSER_HOME/.env.example /config/.env
    echo "âœ…  Environment file created."
else
    echo "âœ…  Environment file exists."
fi

echo ""

# create symlinks
echo "ğŸ”—  Creating symlinks for config and log files..."
symlinks=( \
/var/www/html/.env \
/var/www/html/storage/logs/laravel.log
)

for i in "${symlinks[@]}"
do
    if [[ -e "$i" && ! -L "$i" ]]; then
        rm -rf "$i"
    fi
    if [[ ! -L "$i" ]]; then
        ln -s /config/"$(basename "$i")" "$i"
    fi
done

echo "âœ…  Symlinks created."
echo ""

# Check for app key
if grep -E "APP_KEY=[0-9A-Za-z:+\/=]{1,}" $WEBUSER_HOME/.env > /dev/null; then
    echo "âœ…  App key exists"
else
    echo "â³  Generating app key..."
    s6-setuidgid webuser php $WEBUSER_HOME/artisan key:generate --no-ansi -q
    echo "âœ…  App key generated."
fi

echo ""

# Fix permissions
echo "ğŸ”’  Fixing app path file permissions..."
chmod -R 755 /config
chown -R webuser:webgroup /config
chown -R webuser:webgroup $WEBUSER_HOME
echo "âœ…  Permissions fixed."
echo ""

# create storage symlink
echo "ğŸ”  Linking the storage..."
s6-setuidgid webuser php $WEBUSER_HOME/artisan storage:link --no-ansi -q
echo "âœ…  Storage linked."
echo ""

# Build cache
echo "ğŸ’°  Building the cache..."
s6-setuidgid webuser php $WEBUSER_HOME/artisan config:cache --no-ansi -q
s6-setuidgid webuser php $WEBUSER_HOME/artisan route:cache --no-ansi -q
s6-setuidgid webuser php $WEBUSER_HOME/artisan view:cache --no-ansi -q
echo "âœ…  Cache set."
echo ""

# Migrate database
echo "ğŸš›  Migrating the database..."
s6-setuidgid webuser php $WEBUSER_HOME/artisan migrate --force --no-ansi -q
echo "âœ…  Database migrated."
echo ""

# App install done, show a message
echo "âœ…  All set, Speedtest Tracker started."
echo ""
