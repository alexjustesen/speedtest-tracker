#!/command/with-contenv bash

# Exit on error
set -e

echo ""
echo "ğŸ‡  Configuring Speedtest Tracker..."
echo ""

# Fix permissions
echo "ğŸ”’  Fixing app path file permissions..."
chmod -R 755 /config
chown -R webuser:webgroup /config
chmod -R 755 $WEBUSER_HOME/storage
chown -R webuser:webgroup $WEBUSER_HOME/storage
echo "âœ…  Permissions fixed."
echo ""

if [ ${DB_CONNECTION:="sqlite"} = "sqlite" ]; then
    # create symlinks
    echo "ğŸ”—  Creating database symlink..."
    symlinks=( \
    /var/www/html/database/database.sqlite \
    )

    for i in "${symlinks[@]}"
    do
        if [[ -e "$i" && ! -L "$i" ]]; then
            rm -rf "$i"
        fi
        if [[ ! -L "$i" ]]; then
            ln -s /config/"$(basename "$i")" "$i"
        fi
    done

    echo "âœ…  Database symlink created."
    echo ""
fi

# Check for env file
if [ ! -f /config/.env ]; then
    echo "ğŸ™„  Environment file not found, creating..."
    s6-setuidgid webuser cp $WEBUSER_HOME/.env.production /config/.env
    echo "âœ…  Environment file created."
else
    echo "âœ…  Environment file exists."
fi

echo ""

# create symlinks
echo "ğŸ”—  Creating symlinks for config and log files..."
symlinks=( \
/var/www/html/.env \
)

for i in "${symlinks[@]}"
do
    if [[ -e "$i" && ! -L "$i" ]]; then
        rm -rf "$i"
    fi
    if [[ ! -L "$i" ]]; then
        ln -s /config/"$(basename "$i")" "$i"
    fi
done

echo "âœ…  Symlinks created."
echo ""

# Check for app key
if [ ! ${APP_KEY} ]; then
    if grep -E "APP_KEY=[0-9A-Za-z:+\/=]{1,}" $WEBUSER_HOME/.env > /dev/null; then
        echo "âœ…  An application key exists."
    else
        echo "â³  Generating an application key..."
        export APP_KEY=$(s6-setuidgid webuser php $WEBUSER_HOME/artisan key:generate --show)
        echo "âš ï¸  An application key was generated at start up, no environment variable was set."
        echo "ğŸ‘€  To set an application key that persists, read the docs: https://docs.speedtest-tracker.dev/"
    fi
else
    echo "âœ…  An application key environment variable exists."
fi

echo ""

# Refresh cache
echo "ğŸ’°  Building the cache..."
s6-setuidgid webuser php $WEBUSER_HOME/artisan view:clear --no-ansi -q
s6-setuidgid webuser php $WEBUSER_HOME/artisan optimize --no-ansi -q
echo "âœ…  Cache set."
echo ""

# Migrate database
echo "ğŸš›  Migrating the database..."
s6-setuidgid webuser php $WEBUSER_HOME/artisan migrate --force --no-ansi -q
echo "âœ…  Database migrated."
echo ""

# App install done, show a message
echo "âœ…  All set, Speedtest Tracker started."
echo ""
