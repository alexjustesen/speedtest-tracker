#!/command/with-contenv bash

# Exit on error
set -e

echo ""
echo "ğŸ‡  Configuring Speedtest Tracker..."
echo ""

# Fix permissions
echo "ğŸ”’  Fixing app path file permissions..."
chmod -R 755 /config
chown -R webuser:webgroup /config
chmod -R 755 $WEBUSER_HOME/storage
chown -R webuser:webgroup $WEBUSER_HOME/storage
echo "âœ…  Done."
echo ""

if [ ${DB_CONNECTION:="sqlite"} = "sqlite" ]; then
    # create symlinks
    echo "ğŸ”—  Creating database symlink..."
    symlinks=( \
    /var/www/html/database/database.sqlite \
    )

    for i in "${symlinks[@]}"
    do
        if [[ -e "$i" && ! -L "$i" ]]; then
            rm -rf "$i"
        fi
        if [[ ! -L "$i" ]]; then
            ln -s /config/"$(basename "$i")" "$i"
        fi
    done

    echo "âœ…  Done."
    echo ""
fi

# Check for app key
if [ ! ${APP_KEY} ]; then
    echo "âš ï¸  An application key is missing!"
    echo "ğŸ‘€  To set an application key, read the docs: https://docs.speedtest-tracker.dev/"
fi

echo ""

# Refresh cache
echo "ğŸ’°  Refreshing the cache..."
s6-setuidgid webuser php $WEBUSER_HOME/artisan config:cache --no-ansi -q
s6-setuidgid webuser php $WEBUSER_HOME/artisan route:cache --no-ansi -q
s6-setuidgid webuser php $WEBUSER_HOME/artisan view:clear --no-ansi -q
echo "âœ…  Done."
echo ""

# Migrate database
echo "ğŸš›  Migrating the database..."
s6-setuidgid webuser php $WEBUSER_HOME/artisan migrate --force --no-ansi -q
echo "âœ…  Done."
echo ""

# App install done, show a message
echo "âœ…  All set, Speedtest Tracker has started!"
echo ""
